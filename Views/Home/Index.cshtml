
@{ ViewBag.Title = "Home Page"; }

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 10px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
        background-color: #fff;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
        color: #333;
        font-weight: bold;
    }

        .card-title a {
            text-decoration: none;
            color: inherit;
        }

            .card-title a:hover {
                text-decoration: underline;
            }

    .card-blue {
        margin-top: -10px;
        background-color: #ccebff;
    }

    .card-green {
        margin-top: 20px;
        background-color: #d9ead3;
    }

    .card-yellow {
        margin-top: 20px;
        background-color: #fff3cd;
    }

    .card-purple {
        margin-top: 20px;
        background-color: #d6d6e3;
    }

    .card-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card card-blue">
                <div class="card-body text-center">
                    <img class="card-image" src="https://via.placeholder.com/300x150" alt="Card Image">
                    <h5 class="card-title">@Html.ActionLink("CompanyHead", "../CompanyHead/Index", "Home")</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card card-blue">
                <div class="card-body text-center">
                    <img class="card-image" src="https://via.placeholder.com/300x150" alt="Card Image">
                    <h5 class="card-title">@Html.ActionLink("SizeHead", "../sizeHead/Index", "Home")</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card card-blue">
                <div class="card-body text-center">
                    <img class="card-image" src="https://via.placeholder.com/300x150" alt="Card Image">
                    <h5 class="card-title">@Html.ActionLink("ColorHead", "../ColorHead/Index", "Home")</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card card-blue">
                <div class="card-body text-center">
                    <img class="card-image" src="https://via.placeholder.com/300x150" alt="Card Image">
                    <h5 class="card-title">@Html.ActionLink("MillHead", "../MillHead/Index", "Home")</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card card-purple">
                <div class="card-body text-center">
                    <img class="card-image" src="https://via.placeholder.com/300x150" alt="Card Image">
                    <h5 class="card-title">@Html.ActionLink("FabricHead", "../FabricHead/Index", "Home")</h5>
                </div>
            </div>
        </div>

    </div>

</div>
